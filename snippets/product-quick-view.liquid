<style>
  .pqv-container{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    right: 0%;
    z-index: 3;
    background: rgba(0,0,0,80%);
    visibility: hidden;
    overflow: auto;
    display: flex;
    align-items: center;
    justify-content: center;

    @media(max-width: 768px) {
      /* width: 96%;
      right: -96%; */
    }
  }
  product-quick-view.open .pqv-container{
    right: 0;
    visibility: visible;
    transition: all 0.6s ease-in-out 0.2s;
  }
  .pqv-wrapper{
    width: 90vw;
    max-width: 1000px;
    margin: auto;
    height: auto;
    background: white;
    position: relative;
    padding: 0;
  }
  .pqv-close-btn{
    position: absolute;
    /* left: 50%;
    top: 0;
    transform: translateX(-50%) translateY(-1px); */
    top: 10px;
    right: 10px;
    z-index: 2;
    width: 30px;
    aspect-ratio: 1;
    border-radius: 50%;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    margin: 0;
    /* background: #fff;
    border: 1px solid #000; */
    visibility: hidden;
  }
  .pqv-close-btn svg{
    width: 24px;
  }
  product-quick-view.open .pqv-close-btn{
    visibility: visible;
  }
  @media screen and (max-width: 744px){
    .pqv-wrapper{
      width: 100%;
      margin: auto;
      height: auto;
      background: white;
      overflow: hidden;
      position: relative;
      /* padding: 42px 0 32px; */
      padding: 0;
    }
    .pqv-close-btn{
      position: absolute;
      left: auto;
      right: 10px;
      top: 10px;
      transform: translateX(0) translateY(0);
    }
    product-quick-view.open .pqv-container .p-info-container{
      padding: 30px 0;
    }
  }

  .pinfo-wrapper-new{
    grid-template-columns: minmax(0,1fr) minmax(0,1fr) !important;
    gap: 16px !important;
    @media(max-width: 768px){
      grid-template-columns: minmax(0, 1fr) !important;
    }

    product-info-content2{
      display: none;
    }
    product-info-media {
      grid-column: 1/2;
      grid-row: 1;
    }
    product-info-content1{
      @media(max-width: 768px){
        padding-inline: 16px;
      }
    }
    .pinfo-1-wrapper{
      box-sizing: border-box;
      padding-inline-end: 16px;
      @media(max-width: 768px){
        padding-inline-end: unset;
      }
    }
    .pinfo-title{
      font-size: var(--Font-Size-Heading-H3, 20px);
      line-height: var(--Line-Height-Heading-H3, 20px); /* 100% */
      letter-spacing: -0.4px;      
    }
    .pinfo-rgular-price{
      font-size: var(--Font-Size-Heading-H4, 16px);
      line-height: var(--Line-Height-Heading-H4, 16px); /* 100% */
      letter-spacing: -0.32px;      
    }
   .pinfo-size-guide span {
      font-size: var(--Font-Size-Paragraph-Tiny, 12px);
      line-height: var(--Line-Height-Paragraph-Tiny, 16px); /* 133.333% */
   }
    .pinfo-add-to-cart{
      font-size: 13px;
      line-height: 13px; /* 100% */      
    }
    .swiper-pagination {
        height: unset !important;
    }
  }
</style>

<product-quick-view class="">
  <div class="pqv-container">
    <div class="pqv-wrapper">
      <div class="pqv-content">
        <button class="pqv-close-btn">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M6 6L18 18M18 6L6 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <div class="pqv-content-x">
        </div>
      </div>
    </div>
  </div>
</product-quick-view>

<script>
  class ProductQuickView extends HTMLElement{
    constructor() {
      super()

      if(this.querySelector(".pqv-close-btn")) {
        this.querySelector(".pqv-close-btn").addEventListener("click", this.close.bind(this))
      }
    }

    renderContent(content) {
      if(content.querySelector(".pinfo-wrapper")) {
        content.querySelector(".pinfo-wrapper").classList.add("pinfo-wrapper-new")
      }
      if(this.querySelector(".pqv-content-x")) {
        this.querySelector(".pqv-content-x").innerHTML = content.innerHTML;
        window.sizeGuide();
      }
    }

    open() {
      this.classList.add("open");
      document.body.classList.add("overflow-hidden");
    }

    close() {
      this.classList.remove("open");
      document.body.classList.remove("overflow-hidden");
    }
  }

  customElements.define("product-quick-view", ProductQuickView)

  window.productQuickView = window.productQuickView ||{}
  productQuickView.container = document.querySelector("product-quick-view")
</script>
