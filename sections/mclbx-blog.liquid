{% liquid
  assign id = section.id
%}
{% assign first_article = blog.articles[0] %}
<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
    }

    @media(max-width: 600px) {
      #shopify-section-{{id}} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }

  .sec-{{ id }}{



    .--article-container {
      display: grid;
      grid-template-columns: repeat(3,1fr);
      gap: var(--Spacing-Container-md, 24px);
      @media(max-width: 600px){
        grid-template-columns: 1fr;
      }
  }

/* First Article Styling */
    
.--first-article{
  position: relative;

.media-wrapper {
    margin-bottom: 120px;
}
img.--media-img {
  @media(max-width: 600px){
     aspect-ratio: 4/5;
    object-fit: cover;
    object-position: center;
  }
   
}
.card-content-wrapper {
    max-width: 880px;
    position: absolute;
    bottom: 0;
    left: 50%;
    /* transform: translateX(-50%); */
    transform: translate(-50%, 50%);
    background: #FFF;
    box-shadow: 0px 2px 4px -2px rgba(0, 0, 0, 0.10), 0px 4px 6px -1px rgba(0, 0, 0, 0.10);
    padding: var(--Spacing-Container-md, 24px) var(--Spacing-Container-lg, 40px);
    box-sizing: border-box;
    @media(max-width: 600px){
      width: calc(100% - calc(var(--Spacing-Section-Section-Horizontal-Padding)*2));
      transform: translate(-50%, 35%);
    }
}
.--top-block {
    display: flex;
    flex-direction: column;
    gap: var(--Spacing-Container-xs, 12px);
    text-align: center;
  @media(max-width: 600px){
      
    }
}
h2.--card-title {
    margin: 0;
    color: var(--Content-Base-main, #1F2937);
    font-family: var(--font-family-Title, "Aktiv Grotesk");
    font-size: var(--Font-Size-Heading-H2, 20px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Heading-H2, 24px);
    letter-spacing: -0.72px;
   @media(max-width: 600px){
      letter-spacing: -0.6px;
    }
}
.--content {
    color: var(--Content-Base-main, #1F2937);
    font-size: var(--Font-Size-Paragraph-Small, 14px);
    line-height: var(--Line-Height-Paragraph-Small, 20px);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  @media(max-width: 600px){
       -webkit-line-clamp: 5;
    }
}
a.button {
    display: block;
}
}
/* First Article Styling End */

  }
</style>

<div class="sec-{{ id }}">
  <div class="--first-article">
    <div class="media-wrapper">
      <a href="{{ first_article.url }}" class="absolute-link"></a>
      {% if first_article.image != null %}
        {{ first_article.image | image_url: width: first_article.image.width | image_tag: class: '--media-img' }}

      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}
    </div>
    <div class="card-content-wrapper">
      <div class="--top-block">
        <h2 class="--card-title">{{ first_article.title }}</h2>
        <div class="--content">{{ first_article.content | strip_html }}</div>
        <a class="button" href="{{ first_article.url }}">Read More</a>
      </div>
    </div>
  </div>
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="--article-container">
        {% for article in blog.articles %}
          {% unless forloop.first %}
            {% assign title = article.title %}
            {% assign content = article.content | strip_html %}
            {% assign image = article.image %}
            {% render 'mclbx-article-card', title: title, content: content, image: image, article: article %}
          {% endunless %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

