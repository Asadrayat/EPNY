{% liquid
  assign id = section.id
%}
{% # assign first_article = blog.articles[0] %}
<style>
      #shopify-section-{{id}} {
        box-sizing: border-box;
        margin-top: {{section.settings.margin_top | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
        padding-top: {{section.settings.padding_top | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      }

      @media(max-width: 600px) {
        #shopify-section-{{id}} {
          margin-top: {{section.settings.margin_top_m | append: 'px'}};
          margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
          padding-top: {{section.settings.padding_top_m | append: 'px'}};
          padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
        }
      }

    .sec-{{ id }}{
  /* First Article Styling */

  .--first-article{
    position: relative;

  .media-wrapper {
      margin-bottom: 120px;
  }
  img.--media-img {
    @media(max-width: 600px){
       aspect-ratio: 4/5;
      object-fit: cover;
      object-position: center;
    }

  }
  .card-content-wrapper {
      width: 100%;
      max-width: 760px;
      position: absolute;
      bottom: 0;
      left: 50%;
      /* transform: translateX(-50%); */
      transform: translate(-50%, 50%);
      background: #FFF;
      box-shadow: 0px 2px 4px -2px rgba(0, 0, 0, 0.10), 0px 4px 6px -1px rgba(0, 0, 0, 0.10);
      padding: var(--Spacing-Container-md, 24px) var(--Spacing-Container-lg, 40px);
      box-sizing: border-box;
      @media(max-width: 600px){
        width: calc(100% - calc(var(--Spacing-Section-Section-Horizontal-Padding)*2));
        transform: translate(-50%, 35%);
      }
  }
  .--top-block {
      display: flex;
      flex-direction: column;
      gap: var(--Spacing-Container-xs, 12px);
      text-align: center;
    @media(max-width: 600px){

      }
  }
.--button-wrapper {
    display: flex;
    gap: var(--Spacing-Container-xs, 12px);
    justify-content: center;
}
.--single-button {
    color: var(--Content-Base-main, #1F2937);
    font-family: var(--font-family-Body, "Aktiv Grotesk");
    font-size: var(--Font-Size-Paragraph-Regular, 16px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Regular, 24px);
    padding: var(--Spacing-Container-xxs, 8px) var(--Spacing-Container-md, 24px);
    border: 1px solid rgba(168, 168, 168, 0.34);
    background: rgba(197, 197, 197, 0.30);
    max-width: max-content;
  @media(max-width: 600px){
        font-size: var(--Font-Size-Paragraph-Small);
        line-height: var(--Line-Height-Paragraph-Small);
  }
}
    
  h2.--card-title {
      margin: 0;
      color: var(--Content-Base-main, #1F2937);
      font-family: var(--font-family-Title, "Aktiv Grotesk");
      font-size: var(--Font-Size-Heading-H2, 20px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H2, 24px);
      letter-spacing: -0.72px;
     @media(max-width: 600px){
        letter-spacing: -0.6px;
      }
  }

  }
  /* First Article Styling End */
.--article-content {
    max-width: 880px;
    margin: auto;

p {
    color: var(--Content-Base-base, #4B5563);
    font-family: var(--font-family-Body, "Aktiv Grotesk");
    font-size: var(--Font-Size-Paragraph-Small, 14px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Small, 20px);
}



  
}

    }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="--first-article">
      <div class="media-wrapper">
        <!-- <a href="{{ first_article.url }}" class="absolute-link"></a> -->
        {% if article.image != null %}
          {{ article.image | image_url: width: article.image.width | image_tag: class: '--media-img' }}
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
      </div>
      <div class="card-content-wrapper">
        <div class="--top-block">
          <h2 class="--card-title">{{ article.title }}</h2>
          <div class="--button-wrapper">
            <div class="--single-button"> {{ article.created_at | date: '%d %B, %Y' }} </div>
            <div class="--single-button"> 10 mins read </div>
          </div>
          
        </div>
      </div>
    </div>
    <div class="wrapper-{{ id }}">
      <div class="--article-content">
        {{ article.content }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "header",
      "content": "Section Spacing Desktop"
    },
    {
      "type": "range",
      "id": "margin_top",
