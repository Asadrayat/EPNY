{% liquid
  assign id = section.id
%}

<style>
  #shopify-section-{{id}} {
    box-sizing: border-box;
    margin-top: {{section.settings.margin_top | append: 'px'}};
    margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
    padding-top: {{section.settings.padding_top | append: 'px'}};
    padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
  }
  .wrapper-{{ id }} {
    display: grid;
    grid-template-columns: minmax(0,3fr) minmax(0,5fr);
    row-gap: var(--Spacing-Container-lg);
    column-gap: var(--Spacing-Container-md);
    align-items: end;
    @media(max-width: 600px) {
      grid-template-columns: 1fr;
      row-gap: var(--Spacing-Container-md);
    }
  }

  @media(max-width: 600px) {
    #shopify-section-{{id}} {
      margin-top: {{section.settings.margin_top_m | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
      padding-top: {{section.settings.padding_top_m | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
    }
  }
.sec-{{ id }}{
  .--empty-block {
    display: block!important;
     @media(max-width: 600px) {
       display: none!important;
     }
  }
.--text-block {
    display: flex;
    flex-direction: column;
    gap: var(--Spacing-Container-xxs, 8px);
}
  .--block-title {
    color: var(--Content-Base-main, #1F2937);
    font-family: var(--font-family-Title, "Aktiv Grotesk");
    font-size: var(--Font-Size-Heading-H3, 20px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Heading-H3, 20px);
    letter-spacing: -0.4px;
}
  .--block-content {
    color: var(--Content-Base-main, #1F2937);
    font-family: var(--font-family-Body, "Aktiv Grotesk");
    font-size: var(--Font-Size-Paragraph-Small, 14px);
    font-style: normal;
    font-weight: 300;
    line-height: var(--Line-Height-Paragraph-Small, 20px);
}
.--image-wrapper img {
    width: 100%;
    height: auto;
}
}
  
  
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="--empty-block"></div>
      {% for block in section.blocks %}
       {% if block.type == "text" %}
        <div class= "--text-block">
          <div class="--block-title">{{ block.settings.title }}</div>
          <div class="--block-content">{{ block.settings.content }}</div>
        </div>
         {% elsif block.type == "image" %}
         <div class="--image-wrapper">
           {% if block.settings.image != blank %}
           {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
           {% else %}
           {{ "hero-apparel-3" | placeholder_svg_tag }}
           {% endif %}
         </div>
{% endif %}
         {% endfor %}
    </div>
  </div>
</div>

