{% liquid
  assign id = section.id
%}

<style>
        #shopify-section-{{id}} {
          box-sizing: border-box;
          margin-top: {{section.settings.margin_top | append: 'px'}};
          margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
          padding-top: {{section.settings.padding_top | append: 'px'}};
          padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
        }
        .wrapper-{{ id }} {
          display: grid;
          /* grid-template-columns: 1fr 1fr; */
          grid-template-columns: repeat({{ section.settings.item_per_row }}, minmax(0,1fr));
          gap: var(--Spacing-Container-md);
          @media(max-width: 600px) {
            grid-template-columns: 1fr;
          }
        }
        .wrapper-{{ id }} h2.--card-title {
          color: var(--Content-Base-main, #1F2937);

          /* Headings/H2 */
          font-family: var(--font-family-Title);
          font-size: var(--Font-Size-Heading-H2);
          font-style: normal;
          font-weight: 400;
          line-height: var(--Line-Height-Heading-H2); /* 100% */
          color: #fff;
          margin: 0 0 var(--Spacing-Container-xs) 0;
          letter-spacing: normal;
        }
        .wrapper-{{ id }} p{
          color: var(--Content-Base-main, #1F2937);

          /* Paragraph/M */
          font-family: var(--font-family-Body);
          font-size: var(--Font-Size-Paragraph-Regular);
          font-style: normal;
          font-weight: 400;
          line-height: var(--Line-Height-Paragraph-Regular); /* 150% */
          margin: 0;
        }
        @media(max-width: 600px) {
          #shopify-section-{{id}} {
            margin-top: {{section.settings.margin_top_m | append: 'px'}};
            margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
            padding-top: {{section.settings.padding_top_m | append: 'px'}};
            padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
          }
        }


      .sec-{{ id }} {
      .--single-card-wrapper{
        position: relative;
      }
      .--image-wrapper.--enable-overlay {
        img, svg {
           filter: brightness(0.7);
        }
      }
      .--image-wrapper{
        img, svg {
            width: 100%;
            height: auto;
            aspect-ratio: 1/1;
            {% if section.settings.item_per_row == "1" %}
              aspect-ratio: 2/1;
            {% elsif section.settings.item_per_row == "2" %}
              aspect-ratio: 1/1;
            {% elsif section.settings.item_per_row == "3" %}
              aspect-ratio: 3/4;
            {% endif %}

            object-fit: cover;
            overflow: hidden;
            @media(max-width:600px){
              aspect-ratio: unset;
            }
        }
      }
      svg.--card--placeholder {
          border: 1px solid;
      }

    .--text-content-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        box-sizing: border-box;
        padding: var(--Spacing-Container-lg, 40px);
        {% if section.settings.item_per_row == "3" %}
          padding: var(--Spacing-Container-md, 24px);
        {% else %}
            padding: var(--Spacing-Container-lg, 40px);
        {% endif %}
        
    }
    a.--card-button {
        color: var(--Content-Inverted-main, #F3F4F6);
        font-family: var(--font-family-Body, "Aktiv Grotesk");
        font-size: var(--Font-Size-UI-Controls-Control-Button-Small, 16px);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-UI-Controls-Control-Button-Small, 16px);
        text-decoration-line: underline;
        display: block;
    }

  /* Content Placement for desktop  and Mobile*/
   .--text-content-wrapper{
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;

      /* Content Placement for desktop */
      {% if section.settings.desktop_alignment == "top_left" %}
          align-items: flex-start;
          justify-content: flex-start;
          text-align: left;
      {% elsif section.settings.desktop_alignment == "top_center" %}
        align-items: flex-start;
        justify-content: center;
        text-align: center;
      {% elsif section.settings.desktop_alignment == "top_right" %}
        align-items: flex-start;
        justify-content: flex-end;
        text-align: right;
      {% elsif section.settings.desktop_alignment == "middle_left" %}
          align-items: center;
          justify-content: flex-start;
          text-align: left;
      {% elsif section.settings.desktop_alignment == "center" %}
           align-items: center;
          justify-content: center;
          text-align: center;
      {% elsif section.settings.desktop_alignment == "middle_right" %}
         align-items: center;
          justify-content: flex-end;
          text-align: right;
      {% elsif section.settings.desktop_alignment == "bottom_left" %}
          align-items: flex-end;
          justify-content: flex-start;
          text-align: left;
      {% elsif section.settings.desktop_alignment == "bottom_center" %}
          align-items: flex-end;
          justify-content: center;
          text-align: center;
      {% elsif section.settings.desktop_alignment == "bottom_right" %}
           align-items: flex-end;
          justify-content: flex-end;
          text-align: right;
      {% endif %}

      /* Content Placement for Mobile Start */
      @media(max-width: 768px){
        justify-content: center;
        text-align: center;
        {% if section.settings.mobile_alignment == "top_left" %}
          align-items: flex-start;
          justify-content: flex-start;
          text-align: left;
      {% elsif section.settings.mobile_alignment == "top_center" %}
        align-items: flex-start;
        justify-content: center;
        text-align: center;
      {% elsif section.settings.mobile_alignment == "top_right" %}
        align-items: flex-start;
        justify-content: flex-end;
        text-align: right;
      {% elsif section.settings.mobile_alignment == "middle_left" %}
          align-items: center;
          justify-content: flex-start;
          text-align: left;
      {% elsif section.settings.mobile_alignment == "center" %}
           align-items: center;
          justify-content: center;
          text-align: center;
      {% elsif section.settings.mobile_alignment == "middle_right" %}
         align-items: center;
          justify-content: flex-end;
          text-align: right;
      {% elsif section.settings.mobile_alignment == "bottom_left" %}
          align-items: flex-end;
          justify-content: flex-start;
          text-align: left;
      {% elsif section.settings.mobile_alignment == "bottom_center" %}
          align-items: flex-end;
          justify-content: center;
          text-align: center;
      {% elsif section.settings.mobile_alignment == "bottom_right" %}
           align-items: flex-end;
          justify-content: flex-end;
          text-align: right;
      {% endif %}
      }
      /* Content Placement for Mobile End */
    }







      }
</style>

<div class="sec-{{ id }} ">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        <style>
          .--single-card-wrapper.--card--{{ section.id }}--{{ block.id }} {
            a.--card-button, h2.--card-title {
              color : {{ block.settings.color }};
            }
          }
        </style>

        <div class="--single-card-wrapper --card--{{ section.id }}--{{ block.id }}">
          <div class="--image-wrapper {% if block.settings.overlay == true %}--enable-overlay{% endif %}">

                 {% if block.settings.image != blank and block.settings.image_mobile != blank %}
                    {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: class: "small-hide medium-hide" }}
                    {{ block.settings.image_mobile | image_url: width: block.settings.image_mobile.width | image_tag: class: "large-up-hide" }}
                  {% elsif block.settings.image != blank and block.settings.image_mobile == blank %}
                    {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
                  {% elsif block.settings.image_mobile != blank %}
                    {{ block.settings.image_mobile | image_url: width: block.settings.image_mobile.width | image_tag }}
                   {% else %}
                    {{ 'image' | placeholder_svg_tag: '--card--placeholder' }}
                  {% endif %}


            {% comment %}
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
            {% elsif block.settings.collection.image != blank %}
              {{
                block.settings.collection.image
                | image_url: width: block.settings.collection.image.width
                | image_tag
              }}
              
            {% else %}
              {{ 'image' | placeholder_svg_tag: '--card--placeholder' }}
            {% endif %}
            
              
            {% endcomment %}
          </div>

          <div class="--text-content-wrapper">
            <a class="absolute-link" href="{{ block.settings.url }}"></a>
            <div class="--text-content-block">
              <h2 class="--card-title">
                {{ block.settings.title }}
              </h2>
              <a class="--card-button" href="{{ block.settings.url }}"> {{ block.settings.button_label }}</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
