{% liquid
  assign id = section.id
%}

<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      overflow: hidden;
      background: {{ section.settings.bg-color }};

    }

    @media(max-width: 768px) {
      #shopify-section-{{id}} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }
    .sec-{{ id }}{
      .top-wrapper {
          margin: 0 0 var(--Spacing-Container-md);
          text-align: {{ section.settings.alignment }};
      }
      .title{
        color: var(--Content-Base-main);
        font-family: var(--font-family-Title, "Neue Plak");
        font-size: var(--Font-Size-Heading-H2);
        font-style: normal;
        font-weight: 400;
        line-height: var(--Line-Height-Heading-H2);
        letter-spacing: -0.4px;
        text-transform: capitalize;
        margin: 0;
        
      }
      .--section-content {
          color: var(--Content-Base-main, #1F2937);
          font-family: var(--font-family-Body, "Aktiv Grotesk");
          font-size: var(--Font-Size-Paragraph-Small, 14px);
          font-style: normal;
          font-weight: 400;
          line-height: var(--Line-Height-Paragraph-Small, 20px);
          max-width: 780px;
          margin-top: var(--Spacing-Container-xs, 12px);
        {% if section.settings.alignment == "left" %}
          float: left;
        {% elsif section.settings.alignment == "center" %}
          margin-inline: auto;
        {% elsif section.settings.alignment == "right" %}
          float: right;
        {% endif %}
          
      }
      .card-grid-container{
        display: grid;
        grid-template-columns: repeat({{ section.settings.slides_per_view }}, minmax(0,1fr));
        gap: var(--Spacing-Container-sm, 16px);
        @media(max-width: 768px){
          grid-template-columns: minmax(0,1fr);
        }
      }
      /* Swiper Navigation */
      .card-list-wrapper{
        position: relative;
      }
      .swiper:not(.swiper-initialized) .swiper-slide {
        max-width: calc(var(--page-width)/4) !important;
        margin-right: 16px;
        overflow: hidden;
      }
      .swiper-button-next:after,
      .swiper-button-prev:after {
        content: 'none';
      }
      .swiper-button-next.swiper-button-disabled, .swiper-button-prev.swiper-button-disabled{
        display: none!important;
      }
      #slider-next--{{ section.id }} {
        color: #000;
        width: 40px;
        height: 40px;
        position: absolute;
        right: 0;
        top: 50%;
        display: flex;
        padding: 8px;
        align-items: center;
        border-radius: var(--rounded-full, 999999px);
        background: #FFF;
        box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
        transform: translateX(50%);
        @media(max-width: 768px){
          transform: unset;
        }
      }
      #slider-next--{{ section.id }} svg{
        width: 24px;
        height: 24px;
      }
     #slider-prev--{{ section.id }}{
        color: #000;
        width: 40px;
        height: 40px;
        position: absolute;
        left: 0;
        top: 50%;
        display: flex;
        padding: 8px;
        align-items: center;
        border-radius: var(--rounded-full, 999999px);
        background: #FFF;
        box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.10), 0px 1px 3px 0px rgba(0, 0, 0, 0.10);
        transform: translateX(-50%);
        @media(max-width: 768px){
          transform: unset;
        }
     }
     #slider-prev--{{ section.id }} svg{
        width: 24px;
        height: 24px;
     }
      .--swiper-pagination.pagination--{{ section.id }} {
        display: none;
      }
    }

   /* Style 2 Specific Styling */

  .sec-{{ id }}.style_2 {

  .card-list-wrapper {
      position: relative;
      width: calc(100% - 160px);
      margin-inline: auto;
    @media(max-width: 768px){
      width: 100%;
    }
  }
   #slider-next--{{ section.id }} {

        transform: translateX(200%);
        @media(max-width: 768px){
          /* transform: unset; */
          display:none;
        }
      }

     #slider-prev--{{ section.id }}{

        transform: translateX(-200%);
        @media(max-width: 768px){
           /* transform: unset; */
          display:none;
        }
     }

  .--swiper-pagination.pagination--{{ section.id }} {
        @media(max-width: 768px){
          display:block;
          text-align: center;
        }
    span.swiper-pagination-bullet {
        width: 20px;
        height: 3px;
        border-radius: 5px;
      transition: .4s ease;
    }
    span.swiper-pagination-bullet.swiper-pagination-bullet-active {
    background: #906F53;
    width: 40px;
  }
  }


  }
</style>

<div class="sec-{{ id }} {{ section.settings.card_style }}" id="collection-list--{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      <div class="top-wrapper">
        {% if section.settings.title != blank %}
          <h2 class="title">{{ section.settings.title }}</h2>
        {% endif %}
        <div class="--section-content">{{ section.settings.content }}</div>
      </div>
      <div class="card-list-wrapper">
        {% if section.settings.enable_slider == true %}
          <div class="swiper swiper-{{ section.id }}">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  {% if section.settings.card_style == 'style_1' %}
                    {% render 'mclbx-card', block: block %}
                  {% elsif section.settings.card_style == 'style_2' %}
                    {% render 'mclbx-card-style-2', block: block, section: section %}
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          </div>
          <div class="swiper-button-next" id="slider-next--{{ section.id }}">
            {% render 'all-icons', name: 'right_arrow' %}
          </div>
          <div class="swiper-button-prev" id="slider-prev--{{ section.id }}">
            {% render 'all-icons', name: 'left_arrow' %}
          </div>

        {% else %}
          <div class="card-grid-container">
            {% for block in section.blocks %}
              <div class="card-grid">
                {% if section.settings.card_style == 'style_1' %}
                  {% render 'mclbx-card', block: block %}
                {% elsif section.settings.card_style == 'style_2' %}
                  {% render 'mclbx-card-style-2', block: block %}
                {% endif %}
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
      {% if section.settings.enable_slider == true %}
        <div class="--swiper-pagination pagination--{{ section.id }}"></div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper(".swiper-{{ section.id }}", {
      slidesPerView: {{ section.settings.slides_per_view_mbl }},
      spaceBetween: 12,
      breakpoints: {
        768: {
          slidesPerView: {{ section.settings.slides_per_view }},
          spaceBetween: 16,
        },
      },
      navigation: {
        nextEl: "#slider-next--{{ section.id }}",
        prevEl: "#slider-prev--{{ section.id }}",
      },
      pagination: {
        el: ".--swiper-pagination.pagination--{{ section.id }}",
        clickable: true,
      },
    });
  });
</script>

