.--elements-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--Spacing-Container-sm, 16px);
    /* background: red; */
    /* justify-items: center;
    align-items: center;
    text-align: center; */
    margin-bottom: var(--Spacing-Container-md, 24px);
    @media(max-width: 768px){
      grid-template-columns: 1fr;
    }
}
.--element-card {
    display: flex;
    flex-direction: column;
  {% if section.settings.text-alignment == 'center' %}
     align-items: center;
    text-align: center;
  {% endif %}
    
    gap: var(--Spacing-Container-xs, 12px);
}
.--element-title {
    color: inherit;
    /* text-align: center; */
    font-family: var(--font-family-Title, "Aktiv Grotesk");
    font-size: var(--Font-Size-Heading-H1, 32px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Heading-H1, 32px);
    letter-spacing: -0.96px;
}
.--element-content {
    color: inherit;
    /* text-align: center; */
    font-family: var(--font-family-Body, "Aktiv Grotesk");
    font-size: var(--Font-Size-Paragraph-Tiny, 12px);
    font-style: normal;
    font-weight: 400;
    line-height: var(--Line-Height-Paragraph-Tiny, 16px);
}

a.button {
    color: inherit;
  {% if section.settings.text-alignment == 'center' %}
    display: block;
  {% endif %}
}



  }
</style>

<div class="sec-{{ id }}">
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image' %}
            <div class="--image-wrapper small-hide medium-hide">
              {% if block.settings.image != blank %}
                {{ block.settings.image | image_url: width: block.settings.image.width | image_tag }}
              {% else %}
                {{ 'hero-apparel-1' | placeholder_svg_tag }}
              {% endif %}
            </div>
            <div class="--image-wrapper large-up-hide">
              {% if block.settings.image_mobile != blank %}
                {{ block.settings.image_mobile | image_url: width: block.settings.image_mobile.width | image_tag }}
              {% else %}
                {{ 'hero-apparel-2' | placeholder_svg_tag }}
              {% endif %}
            </div>
          {% when 'text' %}
            <div class="--text-block-container {% if forloop.first %} --text-first {% else %}--text-last{% endif %}">
              <h2 class="--title">{{ block.settings.title }}</h2>
              <div class="--content">{{ block.settings.content }}</div>
              {% if element_blocks != blank %}
                <div class="--elements-container">
                  {% for block in element_blocks %}
                    <div class="--element-card">
                      <div class="--element-title">{{ block.settings.title }}</div>
                      <div class="--element-content">{{ block.settings.content }}</div>
                    </div>
                  {% endfor %}
                </div>
              {% endif %}
              {% comment %}
                  <div class="--icon-card-container">
                  {% if block.settings.feature_1_label != blank and block.settings.feature_1_icon != blank %}
                    <div class="--card-wrapper">
                      {{ block.settings.feature_1_icon | image_url: width: 44 | image_tag }}
                      {{ block.settings.feature_1_label }}
                    </div>
                  {% endif %}
                  {% if block.settings.feature_2_label != blank and block.settings.feature_2_icon != blank %}
                    <div class="--card-wrapper">
                      {{ block.settings.feature_2_icon | image_url: width: 44 | image_tag }}
                      {{ block.settings.feature_2_label }}
                    </div>
                  {% endif %}
                  {% if block.settings.feature_3_label != blank and block.settings.feature_3_icon != blank %}
                    <div class="--card-wrapper">
                      {{ block.settings.feature_3_icon | image_url: width: 44 | image_tag }}
                      {{ block.settings.feature_3_label }}
                    </div>
                  {% endif %}
                </div>
              {% endcomment %}

              {% if block.settings.button_label != blank %}
                <a class="button" href="{{ block.settings.button_url }}">{{ block.settings.button_label }}</a>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

