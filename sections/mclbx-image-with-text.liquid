{% liquid
  assign id = section.id
%}
{% assign element_blocks = section.blocks | where: 'type', 'element' %}

<style>
    #shopify-section-{{id}} {
      box-sizing: border-box;
      margin-top: {{section.settings.margin_top | append: 'px'}};
      margin-bottom: {{section.settings.margin_bottom | append: 'px'}};
      padding-top: {{section.settings.padding_top | append: 'px'}};
      padding-bottom: {{section.settings.padding_bottom | append: 'px'}};
      background: {{ section.settings.bg-color }};
    }

    @media(max-width: 600px) {
      #shopify-section-{{id}} {
        margin-top: {{section.settings.margin_top_m | append: 'px'}};
        margin-bottom: {{section.settings.margin_bottom_m | append: 'px'}};
        padding-top: {{section.settings.padding_top_m | append: 'px'}};
        padding-bottom: {{section.settings.padding_bottom_m | append: 'px'}};
      }
    }

  .wrapper-{{ id }} {
      display: grid;
      grid-template-columns: repeat(2,1fr);
      align-items: center;
      background: {{ section.settings.text-bg-color }};
      
      @media(max-width: 600px) {
        grid-template-columns: 1fr;
        gap: var(--Spacing-Container-lg, 24px);
      }


  .--image-wrapper {
      /* border-radius: var(--rounded-lg, 8px); */
      overflow: hidden;
      @media(max-width: 600px) {
         grid-row: 1/2;
       }
    img {
      width: 100%;
    }

  }
.--text-block-container{
  color: {{ section.settings.text-color }};
  {% if section.settings.text-alignment == 'center' %}
    padding-inline: var(--Spacing-Container-xxl)!important;
    text-align: center;
  {% endif %}
}
  .--text-block-container.--text-first {
      padding-right: var(--Spacing-Container-xxl);
       @media(max-width: 600px) {
         padding-right: unset;
       }
  }
  .--text-block-container.--text-last {
      padding-left: var(--Spacing-Container-xxl);
      @media(max-width: 600px) {
         padding-left: unset;
       }
  }

  h2.--title {
      color: inherit;
      font-family: var(--font-family-Title, "Neue Plak");
      font-size: var(--Font-Size-Heading-H2, 24px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Heading-H2, 28px);
      margin-block: 0 var(--Spacing-Container-xxs);
  }

  .--content {
      margin-block: var(--Spacing-Container-xxs) var(--Spacing-Container-sm);
      color: inherit;
      font-family: var(--font-family-Body, "Neue Plak");
      font-size: var(--Font-Size-Paragraph-Small, 14px);
      font-style: normal;
      font-weight: 400;
      line-height: var(--Line-Height-Paragraph-Small, 20px);
  }







