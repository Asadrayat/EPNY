          "label": "Text Content Color",
          "default" : "#F3F4F6"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Upload Image of 1:1 Ratio"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection List",
    }
  ]
}
{% endschema %}
